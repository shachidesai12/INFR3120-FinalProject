<!--Calculate food total-->
<% var foodTotal = 0 %>
<% for(let count=0;count<Datalist.length;count++) { %>
  <% if(Datalist[count].Category =="Food") { %>
  <% foodTotal += Datalist[count].Amount  %>
<% } %>
<% } %>  
<%= foodTotal %>

